= form_with model: message, remote: true, authenticity_token: true, html: {class: "new_message", id: "new_message"} do |f|
  .input-group.form-control-lg
    %span.form-group-addon
      %i.now-ui-icons.text_caps-small
  = f.text_area :content, data: {textarea: "message"}, class: 'form-control', placeholder: "Reply to @#{receiver.username}"
  = f.hidden_field :chat_id, value: chat.id, id: "message_chat_id"