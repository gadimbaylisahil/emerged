.content
  .row
    .col-md-8.ml-auto.mr-auto
      .card
        .card-header
          .text-center
            %h5.title New Message

          %hr
        .card-body
          = form_for @chat, url: user_chats_path(current_user) do |form|
            .row
              .col-2.mx-auto
                %label.title To:
              .col-10.mx-auto
                .form-group
                  = text_field_tag :receiver, '', class: 'form-control', placeholder: "@username"
            .row
              .col-2.mx-auto
                %label.title Message:
              .col-10.mx-auto
                .form-group
                  = text_area_tag :content, '', class: 'form-control', cols: "80", rows: "20"
                  = form.submit "Send", class: 'btn btn-sm btn-round btn-success'