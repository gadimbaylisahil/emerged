.main-panel
  %nav.navbar.navbar-expand-lg.navbar-absolute.navbar-transparent.bg-primary.fixed-top{role: "navigation"}
    .container-fluid
      .navbar-wrapper
        .navbar-toggle
          %button.navbar-toggler{:type => "button"}
            %span.navbar-toggler-bar.bar1
            %span.navbar-toggler-bar.bar2
            %span.navbar-toggler-bar.bar3
        %a.navbar-brand{:href => "#"} Dashboard
      %button.navbar-toggler{"aria-controls" => "navigation-index", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navigation", "data-toggle" => "collapse", :type => "button"}
        %span.navbar-toggler-bar.navbar-kebab
        %span.navbar-toggler-bar.navbar-kebab
        %span.navbar-toggler-bar.navbar-kebab
      #navigation.collapse.navbar-collapse.justify-content-end
        %ul.navbar-nav
          %li.nav-item
            = link_to discovery_path, class: 'nav-link' do
              %i.now-ui-icons.location_world
        %ul.navbar-nav
          %li.nav-item
            = link_to user_chats_path(current_user), class: 'nav-link' do
              %i.now-ui-icons.ui-1_email-85
          %li.nav-item.dropdown
            = link_to '#', class: 'nav-link dropdown-toggle', id: 'navbarDropdownMenuLink', "aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown" do
              %i.now-ui-icons.loader_gear
              .dropdown-menu.dropdown-menu-right{"aria-labelledby" => "navbarDropdownMenuLink"}
                = link_to 'Privacy', '#', class: 'dropdown-item'
                = link_to 'Sign Out', sign_out_path, method: :delete, class: 'dropdown-item'
  .panel-header.panel-header-sm
  = yield
  = render partial: 'layouts/partials/footer_dashboard'