!!!
%html
  %head
    %title
      Emerged
    = csrf_meta_tags
    %meta{content: 'width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no', name:'viewport'}
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-expand-lg.bg-primary.navbar-absolute{"color-on-scroll" => "500"}
      .container
        .navbar-wrapper
          .navbar-toggle
            %button.navbar-toggler{"aria-controls" => "navbarSupportedContent", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
              %span.navbar-toggler-bar.bar1
              %span.navbar-toggler-bar.bar2
              %span.navbar-toggler-bar.bar3
          %a.navbar-brand{:href => "#pablo"} Now UI Dashboard Pro
        #navbar.collapse.navbar-collapse.justify-content-end
          %ul.navbar-nav
            %li.nav-item
              %a.nav-link{:href => "../dashboard.html"}
                %i.now-ui-icons.design_app
                Discover
            %li.nav-item
              %a.nav-link{:href => "register.html"}
                %i.now-ui-icons.tech_mobile
                Login
            %li.nav-item.active
              %a.nav-link{:href => "login.html"}
                %i.now-ui-icons.users_circle-08
                Register
    = yield
