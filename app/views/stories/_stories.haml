- stories.each do |story|
  .row.pb-4.mx-auto
    .col-md-9
      .card.card-fashion.card-background{style: "background-image: url(#{story_cover_photo_url(story: story)})"}
        .card-body
          .card-title.text-left
            %h2
              = link_to story_path(story) do
                = story.title
          .card-footer.text-left
            .stats
              %span
                = link_to user_path(story.user) do
                  %i.now-ui-icons.users_circle-08>
                  = story.user.display_name.present? ? story.user.display_name : story.user.full_name
              %span
                %i.now-ui-icons.tech_watch-time
                = story.created_at.to_date
            .stats-link.pull-right
    .col-md-3.px-0
      .card.card-fashion
        .card-title
          %h4
            = link_to story_path(story) do
              = raw story.content.truncate(75)
          %hr
        .card-body
          .card-footer
            .stats
              %span
                %i.now-ui-icons.users_circle-08>
                Jon Russell
              %span
                %i.fa.fa-view
              %a.footer-link{:href => "#pablo"} Some Category