.page-header.page-header-small
  .page-header-image{"data-parallax" => "true", :style => "background-image: url('#{story_cover_photo_url(story: @story)}') ;"}
  .content-center
    .row
      .col-md-8.ml-auto.mr-auto.text-center
        %h2.title
          = @story.title
.section
  .container
    .row
      .col-md-12
        .button-container
          = link_to unlike_story_path(@story), class: "story-unlike btn btn-primary btn-round #{unlike_class(resource: @story)}", method: :put, remote: true do
            Unlike
          = link_to like_story_path(@story), class: "story-like btn btn-primary btn-round #{like_class(resource: @story)}", method: :put, remote: true do
            Like
          = link_to "https://www.facebook.com/sharer/sharer.php?u=#{request.url}", class: 'btn btn-icon btn-lg btn-facebook btn-round', target: '_blank' do
            %i.fa.fa-facebook-square
          = link_to "https://twitter.com/share?text=Checkout out this Story from #{@story.user.full_name}&url=#{request.url}&hashtags=emerged,art", class: 'btn btn-icon btn-lg btn-twitter btn-round', target: '_blank' do
            %i.fa.fa-twitter